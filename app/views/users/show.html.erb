<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
    <h3> All friends: </h3>
    <% @friends.each do |friend| %>
      <%= friend.name %>
    <%end%>

    <h3> Pending requests: </h3>
    <% @pending_friends.each do |friend| %>
      <%= friend.name %>
    <%end%>
  </article>
</section>
